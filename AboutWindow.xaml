<Window x:Class="WpfDiaryApp.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDiaryApp"
        mc:Ignorable="d"
        Title="About" Height="320" Width="320" ResizeMode="NoResize">
    <Grid>
        <RichTextBox VerticalAlignment="Center" HorizontalAlignment="Center" BorderBrush="White" IsReadOnly="True" IsUndoEnabled="False">
            <FlowDocument>
                <Paragraph TextAlignment="Center">
                    Make and review text messages according to the date and time they were made.
                </Paragraph>
                <Paragraph TextAlignment="Center">
                    Taras Bilous 2023
                </Paragraph>
                <Paragraph TextAlignment="Center" Foreground="Red" FontWeight="Bold">
                    Attention!!! The current version has no implementation of data encryption.
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Button Height="50" VerticalAlignment="Bottom" Click="Button_Click">OK</Button>
    </Grid>
</Window>
